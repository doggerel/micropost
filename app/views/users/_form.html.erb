<%=semantic_form_for form do |f|%>
  <%= render 'shared/error_message', :object=> f.object %>
  <%=f.inputs do  %>
    <%=f.input :name,  :length=>20 %>
    <%=f.input :email  %>
    <%=f.input :password, 
      :hint=>"strong password safe guard our site should contain an upper case and lower case characters and be at least 8 characters in length long",
      :as => :pwdcalc
    %>
    <%=f.input :password_confirmation , :label=>"Confirmation"%>
  <%end %>
  <%=f.buttons do  %>
    <%=f.commit_button %>
  <%end  %>
<%end %>
